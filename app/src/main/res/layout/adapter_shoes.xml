<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_adapter"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFav"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="-20dp"
            app:cardBackgroundColor="@color/app"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/buttonFav"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageShoes"
            android:layout_width="135dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/nike_shoes" />

        <TextView
            android:id="@+id/shoesNameAdapter"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/BrandShoes" />

        <TextView
            android:id="@+id/shoesPriceAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/priceshoes" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>